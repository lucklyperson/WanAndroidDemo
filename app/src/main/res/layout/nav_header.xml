<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_head_iv_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/splash15" />

    <TextView
        android:id="@+id/nav_header_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_head_iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/not_login_in"
        android:textColor="@color/colorTextDeep"
        android:textSize="16sp" />
</RelativeLayout>
